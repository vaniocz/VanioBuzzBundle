<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="buzz.browser.class">Vanio\BuzzBundle\Buzz\Browser</parameter>
        <parameter key="vanio_buzz.buzz.batch_listener_chain.class">Vanio\BuzzBundle\Buzz\BatchListenerChain</parameter>
        <parameter key="vanio_buzz.buzz.exception_listener.class">Vanio\BuzzBundle\Buzz\ExceptionListener</parameter>
        <parameter key="vanio_buzz.buzz.json_listener.class">Vanio\BuzzBundle\Buzz\JsonListener</parameter>
    </parameters>
    
    <services>
        <service id="buzz.client" class="%buzz.client.class%" public="false">
            <call method="setTimeout">
                <argument>%buzz.client.timeout%</argument>
            </call>
            <call method="setVerifyPeer">
                <argument>%buzz.client.verify_peer%</argument>
            </call>
        </service>
        <service id="buzz" class="%buzz.browser.class%">
            <argument type="service" id="buzz.client"/>
        </service>
        <service id="vanio_buzz.buzz.batch_listener_chain" class="%vanio_buzz.buzz.batch_listener_chain.class%" public="false">
            <argument type="service" id="buzz.client"/>
        </service>
        <service id="vanio_buzz.buzz.exception_listener" class="%vanio_buzz.buzz.exception_listener.class%" public="false"/>
        <service id="vanio_buzz.buzz.json_listener" class="%vanio_buzz.buzz.json_listener.class%" public="false"/>
    </services>
</container>
